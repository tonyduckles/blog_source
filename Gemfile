source "https://rubygems.org"

gem 'jekyll'
gem "minima", "~> 2.0"

group :jekyll_plugins do
  gem 'github-pages'  # Bootstrap dependencies to stay in sync with GitHub Pages (https://github.com/github/pages-gem)
  gem 'jekyll-archives'
  gem 'jekyll-sitemap'
  gem 'octopress'
  gem 'octopress-codeblock'
  gem 'octopress-image-tag'
  gem 'octopress-ink', git: 'https://github.com/e9t/ink.git', branch: 'fix-warning-deprecated'
  gem 'octopress-linkblog',  git: 'https://github.com/andrewdavidbell/linkblog', branch: 'jekyll3'
  gem 'octopress-paginate'
  gem 'octopress-quote-tag', git: 'https://github.com/NickTomlin/quote-tag.git', branch: 'master'
  gem 'octopress-solarized'
end
